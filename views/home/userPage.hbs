{{>navbarAuthenticated}}

{{>validationSummary}}

<h2 class="center">{{username}}s Life<sup>2</sup> progress</h2>
<div id="myProgress">
    <div id="myBar"></div>
</div>
<br>

{{#if bucketlists }}
    <div class="bucketlists">
    {{#each bucketlists}}
        <div class="bucketlist">
            <b>{{title}}</b><br>
            {{createdAt}}<br>
            {{#if goals}}
                {{goals}}<br>
            {{/if}}
            <div class="addGoal"><a href="/addGoal/{{id}}?list=Bucketlist" class="form-button">+ Add goal</a></div>
        </div>
    {{/each}}
    </div>
{{/if}}
{{#if lifelist }}
    {{#each lifelist}}
        <div class="lifelist">
            <b>{{title}}</b><br>
            {{createdAt}}<br>
            {{#if goals}}
                {{goals}}<br>
            {{/if}}
            <div class="addGoal"><a href="/addGoal/{{id}}?list=Lifelist" class="form-button">+ Add goal</a></div>
        </div>
    {{/each}}
{{/if}}
