            {{/if}}
            {{#if deadline}}
                <br><b>Deadline: </b>{{deadline}}<br>
            {{else}}
                <div class="addGoal"><a href="/setDeadline/{{id}}?list=Lifelist" class="form-button">+ Set deadline</a></div>
            {{/if}}
            <div class="addGoal"><a href="/addGoal/{{id}}?list=Lifelist" class="form-button">+ Add goal</a></div>
        </div>
    {{/each}}
{{/if}}
