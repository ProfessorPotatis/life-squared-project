{{>navbarUnauthenticated}}

<div class="login">
    <h2>Login</h2>
    <form action="/login" method="post" class="loginForm">
        <!--<input type="hidden" name="_csrf" value="{{csrfToken}}">-->
        {{>validationSummary}}
        <input type="text" class="form-register" name="username" placeholder="Username" value="{{username}}" required="required"></input><br>
        <input type="password" class="form-register" name="password" placeholder="Password" value="{{password}}" required="required"></input><br>
        <button class="form-button" type="submit">Login</button>
    </form>
    <br>
    <p>Don't have an account?</p>
    <a href="/register">Sign up here.</a>
</div>
